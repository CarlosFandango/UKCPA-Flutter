# API Configuration
API_URL=https://api.ukchinaperformingarts.com/graphql
API_TIMEOUT=30000

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_MERCHANT_ID=merchant.com.ukchinaperformingarts

# Google Services
GOOGLE_CLIENT_ID_IOS=your_ios_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_ID_ANDROID=your_android_client_id.apps.googleusercontent.com

# Firebase (optional, for analytics/crashlytics)
FIREBASE_PROJECT_ID=ukcpa-mobile
FIREBASE_API_KEY=your_firebase_api_key

# Environment
ENVIRONMENT=development
DEBUG_MODE=true

# Feature Flags
ENABLE_BIOMETRIC_AUTH=true
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true

# App Configuration
APP_NAME=UKCPA
APP_VERSION=1.0.0
MIN_PASSWORD_LENGTH=8

# Cache Configuration
CACHE_DURATION_HOURS=24
IMAGE_CACHE_MAX_SIZE_MB=100

# Analytics
ANALYTICS_ENABLED=true
CRASH_REPORTING_ENABLED=true